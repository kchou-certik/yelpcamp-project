<% include ../partials/header %>
<header class="jumbotron">
    <div class="container">
        <h1>YelpCamp</h1>
        <p>
            Peruse our super silly selections!
        </p>
        <p>
            <a class="btn btn-primary btn-lg" href="/campgrounds/new">Add New Campground!</a>
        </p>
    </div>
</header>
<div class="row">
    <ul style="display:flex; flex-wrap: wrap;">
        <% campgrounds.forEach(function(item){ %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                    <img src="<%= item.image %>">
                    <div class="caption text-center">
                        <h4><%= item.name %></h4>
                        <p>
                            <a href = "/campgrounds/<%=item._id%>" class="btn btn-default">Learn More</a>
                        </p>
                    </div>
                </div>
            </div>
        <% }); %>
    </ul>
</div>
<% include ../partials/footer %>